extends index

block content
  .w3-card-4
    header.w3-container.w3-light-blue
      h1= titulo 
    .w3-container 
        form.w3-container(action="/periodos/registo" method="POST")
            fieldset 
                legend Metadados 
                label Id 
                input.w3-input.w3-round(type="text" name="id")
                label Name 
                input.w3-input.w3-round(type="text" name="nome")
                legend Period
                - all_composers.forEach(element => {
                  input.w3-check(type="checkbox", name=element.id, value=element.nome)
                  label= element.nome
                  br
                - });
            button.w3-btn.w3-indigo.w3-mb-2(type="submit") Register
  footer.w3-container.w3-light-blue 
    address Generated by A96556 on #{data}
    a.w3-button.w3-white(href="/") Return
