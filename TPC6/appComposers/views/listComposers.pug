extends index

block content
  .w3-card-4
    header.w3-container.w3-pink
      h1= titulo + '  '
        a.w3-btn.w3-round.w3-grey(href= "/compositores/registo") +
    .w3-container 
      table.w3-table-all 
        tr 
          th Id 
          th Name 
          th Date of Birth
          th Date of Death
          th Period
        each composer in lista
          tr 
            td= composer.id
            td 
              a(href= "/compositores/" + composer.id) #{composer.nome}
            td= composer.dataNasc
            td= composer.dataObito
            each periodo in all_periods
              if periodo.nome == composer.periodo
                td
                  a(href="/periodos/" + periodo.id) #{periodo.nome}
            td
              a.w3-button.w3-blue(href="/compositores/edit/" + composer.id) Edit
              a.w3-button.w3-red(href="compositores/delete/" + composer.id) Delete

  footer.w3-container.w3-pink 
    address Generated by A96556 on #{data} 
    a.w3-button.w3-white(href="/") Return
