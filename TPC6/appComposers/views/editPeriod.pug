extends index

block content
  .w3-card-4
    header.w3-container.w3-light-blue
      h1= titulo 
    .w3-container 
        form.w3-container(method="POST")
            fieldset 
                legend Metadados 
                label Id 
                input.w3-input.w3-round(type="text" name="id" readonly value=period.id)
                label Name 
                input.w3-input.w3-round(type="text" name="nome" value=period.nome)
                label Composers
                ul
                - for (let i=0; i < all_composers.length; i++)
                    if period.compositores.includes(all_composers[i].id)
                      input(type="checkbox", id=all_composers[i].id, name="compositores", value=all_composers[i].id, checked)
                      label #{all_composers[i].nome}
                      br
                    else
                      input(type="checkbox", id=all_composers[i].id, name="compositores", value=all_composers[i].id)
                      label #{all_composers[i].nome}
                      br
            button.w3-btn.w3-indigo.w3-mb-2(type="submit") Register
      
  footer.w3-container.w3-light-blue
    address Generated by A96556 on #{data}
    a.w3-button.w3-white(href="/") Return