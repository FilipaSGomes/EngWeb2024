extends index

block content
  .w3-card-4
    header.w3-container.w3-light-blue
      h1= titulo 
    .w3-container 
      table.w3-table-all 
        p Id : #{composer.id}
        p Name : #{composer.nome}
        p Date of Birth : #{composer.dataNasc}
        p Date of Death : #{composer.dataObito}
        each periodo in all_periods
              if periodo.nome == composer.periodo
                p Period : 
                  a(href="/periodos/" + periodo.id) #{periodo.nome}

    footer.w3-container.w3-light-blue 
      address Gerado por a95458 em #{data}
      a.w3-button.w3-blue(href="/compositores/edit/" + composer.id) Edit
      a.w3-button.w3-white(href="/") Return
