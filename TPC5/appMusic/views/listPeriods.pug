extends index

block content
  .w3-card-4
    header.w3-container.w3-pink
      h1= titulo + '  '
        a.w3-btn.w3-round.w3-grey(href= "/periodos/registo") +
    .w3-container 
      table.w3-table-all 
        tr 
          th Id 
          th Name
        each periodo in lista
          tr 
            td= periodo.id
            td 
              a(href= "/periodos/" + periodo.id) #{periodo.nome}
            td
              a.w3-button.w3-blue(href="/periodos/edit/" + periodo.id) Edit
              a.w3-button.w3-red(href="periodos/delete/" + periodo.id) Delete

  footer.w3-container.w3-pink  
    address Generated by A96556 on #{data}
    a.w3-button.w3-white(href="/") Return
